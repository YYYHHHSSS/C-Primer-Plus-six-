#include <iostream>
using namespace std;
double Celsius2Fahrenheit(double Celsius);
int main()
{
	double Celsius;
	double Fahrenheit;
	cout << "Please enter a Celsius value:";
	cin >> Celsius;
	Fahrenheit = Celsius2Fahrenheit(Celsius);
	cout << Celsius << " degrees Celsius is " << Fahrenheit << " degrees Fahrenheit." << endl;
	cin.get();
	cin.get();
	return 0;
}

double Celsius2Fahrenheit(double Celsius)
{
	return(1.8*Celsius + 32);
}
