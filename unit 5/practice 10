#include <iostream>
#include <string>
using namespace std;
int main()
{
	unsigned int row = 0;
	cout << "Enter number of rows: ";
	cin >> row;
	for (unsigned int i = 1; i <= row; i++)
	{
		for (unsigned int j = i; j < row; j++)
		{
			cout << ".";
		}
		for (unsigned int j = 0; j < i; j++)
		{
			cout << "*";
		}
		cout << endl;
	}
	cin.get();
	cin.get();
	return 0;
}
