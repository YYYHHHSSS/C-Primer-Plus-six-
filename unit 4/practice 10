#include <iostream>
#include <string>
#include <array>
using namespace std;
int main()
{
	array<double, 3>time;
	double avg_time = 0.0;
	printf("Enter three results time of running 40 meters: ");
	cin >> time[0];
	cin >> time[1];
	cin >> time[2];
	avg_time = (time[0] + time[1] + time[2]) / 3;
	cout << "Result: " << time[0] << " , " << time[1] << " , " << time[2] << endl;
	cout << "Average result: " << avg_time;
	cin.get();
	cin.get();
	return 0;
}
