#include <iostream>
#include <string>
using namespace std;

typedef struct CandyBar {
	string name;
	double weight;
	int calories;
}ST_CandyBar;

int main()
{
	ST_CandyBar candybar[3] = {
		{"Mocha Munch",2.3,350},
		{"Banana",3.5,400},
		{"Hahahaha",3.0,370}
	};
	for (int i = 0; i < 3; i++)
	{
		cout << "The information of CandyBar,Name: " << candybar[i].name << " ,Weight: " << candybar[i].weight << " , " << "Calories: " << candybar[i].calories << " . " << endl;
	}
	cin.get();
	cin.get();
	return 0;
}
