#include <iostream>
using namespace std;
const int Foot2Inch = 12;
int main()
{ 
	int inch_input = 0;
	int inch_output = 0;
	int foot = 0;
	cout << "Please input your height in inch: ___\b\b\b";
	cin >> inch_input;
	foot = inch_input / Foot2Inch;
	inch_output = inch_input%Foot2Inch;
	cout << "Your height in inch is: " << inch_input << " inch;" << endl;
	cout<<"Your height in foot and inch is : " << foot << " foot " << inch_output << " inch!" << endl;
	cin.get();
	cin.get();
	return 0;
}

